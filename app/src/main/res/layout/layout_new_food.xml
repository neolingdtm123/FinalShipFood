<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_shipfood"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_sign_up">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#CCCCCC"
            android:hint="Tên mặt hàng"
            android:paddingBottom="16dp"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_sign_up">

        <EditText
            android:inputType="number"
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#CCCCCC"
            android:hint="Giá"
            android:paddingBottom="16dp"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <com.leekien.shipfoodfinal.customView.RobBoldText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Ảnh sản phẩm"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgThem"
            app:srcCompat="@drawable/ic_plus"/>
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/imgAnh"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <com.leekien.shipfoodfinal.customView.RobButton
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:id="@+id/btnContinue"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Thêm"
        android:background="@drawable/custom_button_tieptuc"/>
</LinearLayout>