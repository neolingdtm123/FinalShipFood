<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/custom_linear"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#C4C4C4">

        <com.leekien.shipfoodfinal.customView.RobBoldText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Chọn số lượng hàng cần mua"
            android:textColor="#000000" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.leekien.shipfoodfinal.customView.RobBoldText
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:text="afasashshahsahsahashhah"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_weight="7" />

        <ImageView
            android:id="@+id/imgTru"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_tru" />

        <com.leekien.shipfoodfinal.customView.RobLightText
            android:id="@+id/textview"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgCong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_plus" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.leekien.shipfoodfinal.customView.RobBoldText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thành tiền:"
            android:layout_weight="7"/>
        <com.leekien.shipfoodfinal.customView.RobLightText
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="7237237372"
            android:gravity="center"/>
    </LinearLayout>
    <com.leekien.shipfoodfinal.customView.RobButton
        android:layout_marginTop="20dp"
        android:id="@+id/btnSubmit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_tieptuc"
        android:text="TIếp tục"
        android:textColor="#FFFFFF" />


</LinearLayout>