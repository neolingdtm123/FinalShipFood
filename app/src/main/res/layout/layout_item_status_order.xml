<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <com.leekien.shipfoodfinal.customView.RobBoldText
            android:id="@+id/tvNumber"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_cicle_orange"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:text="1"/>
        <com.leekien.shipfoodfinal.customView.RobBoldText
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_height="30dp"
            android:text="Đặt đơn"/>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:layout_height="30dp"
            android:text="Đặt đơn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_marginLeft="24.2dp"
            android:background="#000000"
            android:layout_height="40dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:text="Nguyễn Khắc Kiên đã nhận đơn giao hàng"/>
            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/imgCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_call"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>