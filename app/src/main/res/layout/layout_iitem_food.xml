<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="170dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_marginTop="3dp"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:gravity="center">
            <ImageView
                android:visibility="visible"
                android:scaleType="fitXY"
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_plus"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/ic_plus"
                android:layout_gravity="center"
                android:scaleType="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_class1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.leekien.shipfoodfinal.customView.RobBoldText
                android:id="@+id/textviewTitle"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="Gà rán"
                android:textColor="#000000"
                />
            <com.leekien.shipfoodfinal.customView.RobLightText
                android:id="@+id/tvDiscount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="Gà rán"
                android:textColor="@color/green"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <com.leekien.shipfoodfinal.customView.RobLightText
                android:id="@+id/textviewPrice"
                android:layout_width="0dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_money"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="69.0000đ"/>
            <com.leekien.shipfoodfinal.customView.RobLightText
                android:visibility="gone"
                android:id="@+id/tvNumberDat"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2 phần"
   />
            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_edit"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.leekien.shipfoodfinal.customView.RobLightText
            android:id="@+id/tvShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ddháhádhddahdahdh"
          />

    </LinearLayout>

</android.support.v7.widget.CardView>